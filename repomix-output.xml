                      className="absolute bottom-4 right-4 bg-[#00ffff] text-black px-4 py-2 text-xs font-bold uppercase hover:bg-white transition-colors opacity-0 group-hover:opacity-100"
                    >
                      DOWNLOAD_ASSET
